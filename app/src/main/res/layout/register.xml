<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:hint="Name"
        android:textSize="25sp"
        android:inputType="textPersonName"
        android:id="@+id/edit_text_name_register"/>
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:hint="Email"
        android:textSize="25sp"
        android:inputType="textEmailAddress"
        android:id="@+id/edit_text_email_register"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:hint="Password"
        android:textSize="25sp"
        android:inputType="textPassword"
        android:id="@+id/edit_text_password_register"/>
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:hint="Repeat Password"
        android:textSize="25sp"
        android:inputType="textPassword"
        android:id="@+id/edit_text_password_repeat_register"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="4">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="2.5"
        android:textSize="16sp"
        android:id="@+id/button_create_account_register"
        android:padding="16dp"
        android:text="Create Account"/>

</LinearLayout>

</LinearLayout>

</LinearLayout>